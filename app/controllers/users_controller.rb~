class UsersController < ApplicationController
  def index
  end

  def show
  end

  def new
	@user = User.new
  end

  def create
  	@user = User.new(params[:user])
  	if @user.save
		flash[:status] = TRUE
		flash[:alert] = 'Congratulations! You have sucessfully registered.'
	  else
		flash[:status] = FALSE
		flash[:alert] = @user.errors.full_message
	  
  redirect_to register_path
  end 
end
